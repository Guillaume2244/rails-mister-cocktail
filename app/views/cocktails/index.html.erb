<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://hd.unsplash.com/photo-1455621481073-d5bc1c40e3cb');">
  <div class="banner-content">
    <h1>Discover our amazing cocktails</h1>
    <p>Available in every countries</p>
    <%= link_to "Add a Cocktail", new_cocktail_path, class: "btn btn-primary btn-lg"%>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
        <div class="card-description text-center padded">
          <div class="card-name">
            <h2><%= c.name %></h2>
            <img src=<%= country_image_url(c.country)%> class="avatar-large">
          </div>
          <div class="card-image">
            <%= cl_image_tag c.photo, height: 250, width: 300, crop: :fit %>
          </div>
          <div class="card-button">
            <%= link_to "Let's see", cocktail_path(c), class: "btn btn-primary btn-lg"%>
            <%= link_to "remove", cocktail_path(c), method: :delete %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

